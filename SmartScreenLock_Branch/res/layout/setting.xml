<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    >
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_linearlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/title_gray">

        <TextView
            android:id="@+id/title_cloud_textview"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/title" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/setting_ip_imageview"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_icon"
            android:layout_margin="13dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3sp"
            android:src="@color/title_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_layout_size"
            android:gravity="center_vertical"
            android:padding="4.0dip" >

            <TextView
                android:id="@+id/start_imageLeft"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:clickable="false"
                android:scaleType="fitXY"
                android:text="启动智屏"
                android:textSize="@dimen/setting_up" />

            <CheckBox
                android:id="@+id/start_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="true"
                android:button="@drawable/rect_bth_checkbox_normal" />

            <TextView
                android:id="@+id/skinname"
                android:layout_width="fill_parent"
                android:layout_height="17.0dp"
                android:layout_alignBottom="@id/start_imageLeft"
                android:layout_alignRight="@id/start_imageLeft"
                android:text="设置锁屏出现的应用数量"
                android:textColor="@color/setting_text_gray"
                android:textSize="@dimen/setting_down" />
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:src="@color/title_gray" />

        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/filter_application_select"
            android:background="@drawable/setting_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_layout_size"
            android:gravity="center_vertical"
            android:padding="4.0dip" >

            <TextView
                android:id="@+id/clockscreen_imageLeft"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:clickable="false"
                android:scaleType="fitXY"
                android:text="过滤应用"
                android:textSize="@dimen/setting_up" />

            <ImageView
                android:id="@+id/clockscreen_checkbox"
                android:layout_width="@dimen/setting_button"
                android:layout_height="@dimen/setting_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/select_more" />

            <TextView
                android:id="@+id/clockscreen_skinname"
                android:layout_width="fill_parent"
                android:layout_height="17.0dp"
                android:layout_alignBottom="@id/clockscreen_imageLeft"
                android:layout_alignRight="@id/clockscreen_imageLeft"
                android:text="设置不想再锁屏出现的应用"
                android:textColor="@color/setting_text_gray"
                android:textSize="@dimen/setting_down" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:src="@color/title_gray" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_layout_size"
            android:gravity="center_vertical"
            android:padding="4.0dip" >

            <TextView
                android:id="@+id/hand_imageLeft"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:clickable="false"
                android:scaleType="fitXY"
                android:text="开启锁屏手势"
                android:textSize="@dimen/setting_up" />

            <CheckBox
                android:id="@+id/hand_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:button="@drawable/rect_btn_checkbox_normal" />

            <TextView
                android:id="@+id/hand_description"
                android:layout_width="fill_parent"
                android:layout_height="17.0dp"
                android:layout_alignBottom="@id/hand_imageLeft"
                android:layout_alignRight="@id/hand_imageLeft"
                android:text="在锁屏用手势快速打开应用"
                android:textColor="@color/setting_text_gray"
                android:textSize="@dimen/setting_down" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:src="@color/title_gray" />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_layout_size"
            android:gravity="center_vertical"
            android:padding="4.0dip" >

            <TextView
                android:id="@+id/other_start_imageLeft"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:clickable="false"
                android:scaleType="fitXY"
                android:text="你绝对想不到"
                android:textSize="@dimen/setting_up" />

            <CheckBox
                android:id="@+id/service_control_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:checked="false"
                android:button="@drawable/rect_btn_checkbox_normal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="17.0dp"
                android:layout_alignBottom="@id/other_start_imageLeft"
                android:layout_alignRight="@id/other_start_imageLeft"
                android:text="特殊服务"
                android:textColor="@color/setting_text_gray"
                android:textSize="@dimen/setting_down" />
        </RelativeLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:src="@color/title_gray" />
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/photo_layout"
            android:background="@drawable/setting_button"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/setting_layout_size"
            android:gravity="center_vertical"
            android:padding="4.0dip" >

            <TextView
                android:id="@+id/photo_imageLeft"
                android:layout_width="fill_parent"
                android:layout_height="62dp"
                android:clickable="false"
                android:scaleType="fitXY"
                android:text="二娃"
                android:textSize="@dimen/setting_up" />

            <ImageView
                android:id="@+id/photo_checkbox"
                android:layout_width="@dimen/setting_button"
                android:layout_height="@dimen/setting_button"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/select_more" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="17.0dp"
                android:layout_alignBottom="@id/photo_imageLeft"
                android:layout_alignRight="@id/photo_imageLeft"
                android:text="千里眼"
                android:textColor="@color/setting_text_gray"
                android:textSize="@dimen/setting_down" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
</ScrollView>